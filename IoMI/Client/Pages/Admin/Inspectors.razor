@page "/adminpanel/inspectors"
@layout AdminLayout
@inherits InspectorsCode

<h3 class="text-center p-2 bg-light">Inspector List</h3>

@if (UserList is null)
{
    <div class="d-flex flex-column align-items-center justify-content-center gap-2">
        <div class="spinner-border"></div>
        <div class="fs-3">Please wait...</div>
    </div>
}
else
{
    <div class="p-2">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th>Email Address</th>
                    <th>Status</th>
                    <th>Registry Code</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserModel user in UserList)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Name @user.Surname</td>
                        <td>@user.Email</td>
                        <td><span class="badge bg-@(user.IsActive ? "success" : "danger") p-2">@(user.IsActive ? "Active" : "Passive")</span></td>
                        <td>@user.RegistryCode</td>
                        <td>
                            <button disabled="@IsBusy" class="d-flex justify-content-center align-items-center btn btn-sm btn-outline-secondary" @onclick="() => ChangeStatus(user.Id)">
                                <ion-icon class="fs-6" name="sync-outline"></ion-icon>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}