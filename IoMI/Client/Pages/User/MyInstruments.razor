@page "/myinstruments"
@inject ModalManager Modal
<div class="row gap-5 justify-content-center m-0">
	<div class="card p-0">
		<div class="card-header d-flex justify-content-between">
			<h4>Scales</h4>
			<button class="btn btn-success" @onclick="Modal.ShowNewScaleModalAsync">Add New Scale</button>
		</div>
		<div class="card-body">
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">First</th>
						<th scope="col">Last</th>
						<th scope="col">Handle</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th scope="row">1</th>
						<td>Mark</td>
						<td>Otto</td>
						<td>mdo</td>
					</tr>
					<tr>
						<th scope="row">2</th>
						<td>Jacob</td>
						<td>Thornton</td>
						<td>fat</td>
					</tr>
					<tr>
						<th scope="row">3</th>
						<td colspan="2">Larry the Bird</td>
						<td>twitter</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="card p-0">
		<div class="card-header d-flex justify-content-between">
			<h4>Gas Meters</h4>
			<button class="btn btn-success" @onclick="Modal.ShowNewGasMeterModalAsync">Add New Gas Meter</button>
		</div>
		<div class="card-body">
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">First</th>
						<th scope="col">Last</th>
						<th scope="col">Handle</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th scope="row">1</th>
						<td>Mark</td>
						<td>Otto</td>
						<td>mdo</td>
					</tr>
					<tr>
						<th scope="row">2</th>
						<td>Jacob</td>
						<td>Thornton</td>
						<td>fat</td>
					</tr>
					<tr>
						<th scope="row">3</th>
						<td colspan="2">Larry the Bird</td>
						<td>twitter</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>

