@page "/roles"
@layout PublicLayout

<div class="row justify-content-center m-0 p-2">
    <div class="col-md-8 col-lg-6 col-xl-5 col-xxl-4 card p-0 mt-5">
        <div class="card-header">
            <h3 class="text-center my-2"> Choose a Role</h3>
        </div>
        <div class="card-body p-4">
            <AuthorizeView Roles="User, SystemAdmin">
                <div class="mb-3">
                <NavLink class="top-nav-link d-flex align-items-center btn btn-secondary" href="/">
                        <ion-icon class="fs-4 me-2" name="person-circle-outline"></ion-icon> Log in as User
                </NavLink>
                </div>
            </AuthorizeView>
            <AuthorizeView Roles="Inspector, SystemAdmin">
                <div class="mb-3">
                <NavLink class="top-nav-link d-flex align-items-center btn btn-secondary" href="/inspectorpanel">
                        <ion-icon class="fs-4 me-2" name="id-card-outline"></ion-icon> Log in as Inspector
                </NavLink>
                </div>
            </AuthorizeView>
            <AuthorizeView Roles="SystemAdmin">
                <div class="mb-3">
                <NavLink class="top-nav-link d-flex align-items-center btn btn-secondary" href="/adminpanel">
                    <ion-icon class="fs-4 me-2" name="repeat-outline"></ion-icon> Go to Admin Panel
                </NavLink>
                </div>
            </AuthorizeView>
        </div>
    </div>
</div>

