@code {
    [Parameter] public string? Title { get; set; } = "Attention please!";
    [Parameter] public string? Message { get; set; } = "Error.";
    [Parameter] public string? ConfirmText { get; set; } = "Apply";
    [Parameter] public string? CancelText { get; set; } = "🗙";

    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; } = default!;
    protected async Task Confirmed()
    {
        await ModalInstance.CloseAsync(ModalResult.Ok(true));
    }
    protected async Task Canceled()
    {
        await ModalInstance.CancelAsync();
    }
}